{
    "display_information": {
        "name": "pm2-slack-killswitch",
        "description": "Manage pm2 processes with Slack.",
        "background_color": "#18191a"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "PM2 Killswitch",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/killswitch-list",
                "description": "List the currently running processes.",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "commands"
            ]
        }
    },
    "settings": {
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}